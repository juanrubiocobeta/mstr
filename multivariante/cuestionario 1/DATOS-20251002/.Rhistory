library(MVN)
# Subconjuntos por especie
iris_setosa <- subset(iris, Species == "setosa")
iris_versicolor <- subset(iris, Species == "versicolor")
iris_virginica <- subset(iris, Species == "virginica")
# Evaluar normalidad multivariante por especie
mvn_setosa <- mvn(iris_setosa[, 1:4], mvnTest = "mardia")
mvn_versicolor <- mvn(iris_versicolor[, 1:4], mvnTest = "mardia")
mvn_virginica <- mvn(iris_virginica[, 1:4], mvnTest = "mardia")
# Mostrar resultados
mvn_setosa
mvn_versicolor
mvn_virginica
