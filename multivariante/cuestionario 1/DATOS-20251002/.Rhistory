data("iris")
force(iris)
View(iris)
head("iris")
head(iris)
summary(iris)
# Calcular mínimo, máximo y rango
min(iris$Petal.Length)
max(iris$Petal.Length)
range(iris$Petal.Length)   # devuelve (mín, máx)
diff(range(iris$Petal.Length)) # rango = máx - mín
# Matriz de correlación
cor(iris[,1:4])
# Desviación estándar por especie
aggregate(Petal.Length ~ Species, data=iris, FUN=sd)
# O también la varianza
aggregate(Petal.Length ~ Species, data=iris, FUN=var)
# Boxplot de longitud de pétalos por especie
boxplot(Petal.Length ~ Species,
data = iris,
col = c("lightblue", "lightgreen", "lightpink"),
main = "Longitud de pétalos por especie",
xlab = "Especie",
ylab = "Longitud de pétalos")
# Boxplot de longitud de pétalos por especie
boxplot(Petal.Length ~ Species,
data = iris,
col = c("lightblue", "lightgreen", "lightpink"),
main = "Boxplot - Longitud de pétalos por especie",
xlab = "Especie",
ylab = "Longitud de pétalos")
# Añadir medias con puntos rojos
means <- aggregate(Petal.Length ~ Species, data=iris, FUN=mean)
points(1:3, means$Petal.Length, col="red", pch=19)
# Histograma con densidad
hist(iris$Petal.Width, breaks=10, probability=TRUE,
col="lightblue", main="Histograma de Petal.Width", xlab="Anchura de pétalos")
# Añadir curva normal usando media y desviación estándar
xfit <- seq(min(iris$Petal.Width), max(iris$Petal.Width), length=40)
yfit <- dnorm(xfit, mean=mean(iris$Petal.Width), sd=sd(iris$Petal.Width))
lines(xfit, yfit, col="red", lwd=2)
qqnorm(iris$Petal.Width)
qqline(iris$Petal.Width, col="red", lwd=2)
shapiro.test(iris$Petal.Width)
